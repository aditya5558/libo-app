<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_librarian_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.arvind.libo.librarian_main"
    tools:showIn="@layout/app_bar_librarian_main">

    <FrameLayout
        android:id="@id/content_librarian_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>



    <ImageView
        android:id="@+id/issue_book_2"
        android:layout_width="1500dp"
        android:layout_height="100dp"
        android:alpha=".55"
        android:src="@mipmap/issue_book_2"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:clickable="true"
        android:layout_marginTop="84dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="ISSUE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        tools:text="ISSUE"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="30dp"

        android:textColor="@android:color/black"
        android:layout_marginTop="24dp"
        android:layout_alignTop="@+id/issue_book_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Manage books"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@android:color/black"
        android:textSize="25dp"
        tools:text="Manage books"
        android:id="@+id/textView4"
        android:layout_marginBottom="55dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="1500dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/manage_book"
        android:id="@+id/imageView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <ImageView
        android:layout_width="1500dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/manage_membership"
        android:id="@+id/imageView3"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Manage Membership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"

        android:textColor="@android:color/black"
        android:id="@+id/textView3"
        tools:text="Manage Membership"
        android:layout_above="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />


</RelativeLayout>

